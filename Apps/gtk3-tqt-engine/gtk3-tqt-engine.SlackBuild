CXX=$COMPILER_CXX \
../configure \
   --prefix=$INSTALL_TDE \
   --disable-rpath \
   --enable-closure

} || {

cmake ${G_NINJA:-} ${CMAKE_OPTS:-} \
    -DCMAKE_C_FLAGS="$SLKRCFLAGS" \
    -DCMAKE_CXX_FLAGS="$SLKRCFLAGS" \
    -DCMAKE_C_COMPILER=$COMPILER \
